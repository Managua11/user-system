{
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "typescript": "html",
    "typescriptreact": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.experimental.classRegex": [
    ["class\\s*=\\s*\"([^\"]*)", 1],
    ["class:\\s*'([^']*)", 1],
    ["\\[ngClass\\]=\"\\{([^}]*)\\}\"", 1],
    ["\\[ngClass\\]=\"([^']*)\"", 1]
  ],
  "files.associations": {
    "*.html": "html"
  }
}
